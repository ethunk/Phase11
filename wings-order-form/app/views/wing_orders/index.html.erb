<h1>Wing Orders</h1>

<% if flash[:notice] %>
  <div class="notice"><%= flash[:notice] %></div>
<% end %>

<% if flash[:alert] %>
  <div class="notice"><%= flash[:notice] %></div>
<% end %>

<div class=".wing_orders">
<%  @wing_orders.each do |wing_order| %>
  <div class=".wing_order">
    <h2>Order For: <%= wing_order.customer_name %></h2>
    <span><%= "#{wing_order.city}, #{wing_order.state}" %></span>
    <span>Quantity: <%= wing_order.quantity %></span>
    <span>Include Ranch Dressing?: <%= wing_order.ranch_dressing %></span>
    <h3>Flavors To Include</h3>
    <% wing_order.flavors.each do |flavor| %>
      <span><%= flavor.name %></span>
    <% end %>
  </div>
  <%= link_to "Edit Order", edit_wing_order_path(wing_order.id) %>
  <hr />
<% end %>
</div>

<%= link_to "New Order", new_wing_order_path %>
